/* pages/history/history.wxss */.video{
  display: flex;
  flex-flow: column;
}
.videoItem{
  flex: 1;
  border-bottom: 0.5px solid #f6f6f6;
  padding: 8px;
}
.videoItem image{
  width: 40%;
  height: 90px;
  border-radius: 5px;
  margin-right: 5px;
  float: left;
}
.videoTitle{
  font-size: 13px;
  height: 35px;

  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}
.rcmd_reason{
  height: 20px;
  padding-bottom: 4px;
}
.rcmd_reason-content{
  padding: 1px;
}

.rcmd_reason-content text{
  border: 0.5px solid orange;
  font-size: 8px;
  color: orange;
  padding: 1px;
  border-radius: 3px;
}
.owner{
  font-size: 12px;
  color: #bfbfbf;
  margin: 20px 0 0;
}
.owner image {
 height: 16px;
  width: 5%;
}
.stat{
  font-size: 12px;
  color: #bfbfbf;
  margin: 1px 0;
}
.stat image{
  height: 15px;
  width: 5%;
}